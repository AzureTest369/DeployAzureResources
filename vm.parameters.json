{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": { "value": "myLinuxVM" },
    "adminUsername": { "value": "azureuser" },
    "sshPublicKey": {
      "value": "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQD...replace-with-your-key... user@example.com"
    },
    "vmSize": { "value": "Standard_B1s" },
    "location": { "value": "eastus" },
    "imagePublisher": { "value": "Canonical" },
    "imageOffer": { "value": "UbuntuServer" },
    "imageSku": { "value": "18.04-LTS" },
    "imageVersion": { "value": "latest" },
    "osDiskType": { "value": "Standard_LRS" },
    "vnetName": { "value": "vmVNet" },
    "vnetAddressPrefix": { "value": "10.0.0.0/16" },
    "subnetName": { "value": "default" },
    "subnetPrefix": { "value": "10.0.0.0/24" },
    "nsgName": { "value": "vmNSG" },
    "publicIpName": { "value": "vmPublicIP" },
    "nicName": { "value": "vmNic" }
  }
}
